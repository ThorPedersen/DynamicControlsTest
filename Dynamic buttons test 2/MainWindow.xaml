<Window x:Class="Dynamic_buttons_test_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dynamic_buttons_test_2"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindows">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Button x:Name="button" Grid.Row="0"  Grid.Column="0" Content="Button"/>
        <Button x:Name="button2" Grid.Row="0"  Grid.Column="1" Content="Button"/>
        
        <DockPanel Margin="0,20,0,0"  Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
            <Frame x:Name="MainFrame" />
        </DockPanel>

    </Grid>
    
</Window>
